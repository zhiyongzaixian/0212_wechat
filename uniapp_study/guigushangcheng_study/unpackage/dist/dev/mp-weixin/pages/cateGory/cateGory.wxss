.cateGoryContainer .header {
  padding: 10rpx;
}
.cateGoryContainer .header .headerContent {
  width: 94%;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  background: #eee;
  margin: 0 auto;
  font-size: 26rpx;
  border-radius: 10rpx;
}
.cateGoryContainer .contentContainer {
  height: calc(100vh - 80rpx);
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
}
.cateGoryContainer .contentContainer .leftContainer {
  width: 20%;
}
.cateGoryContainer .contentContainer .leftContainer .leftScroll {
  height: calc(100vh - 80rpx);
}
.cateGoryContainer .contentContainer .leftContainer .leftScroll .navItem {
  position: relative;
  font-size: 24rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
}
.cateGoryContainer .contentContainer .leftContainer .leftScroll .navItem.activeClass:after {
  position: absolute;
  top: 10rpx;
  left: 10rpx;
  content: '';
  width: 2rpx;
  height: 60rpx;
  background: #bb2c08;
}
.cateGoryContainer .contentContainer .rightContainer {
  width: 80%;
  background: #41a863;
}
