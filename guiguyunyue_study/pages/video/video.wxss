.videoContainer .header {
  display: flex;
  padding: 10rpx;

}
.videoContainer .header image {
  width: 60rpx;
  height: 60rpx;
}

.videoContainer .header .search {
  border: 1rpx solid #eee;
  margin: 0 20rpx;
  flex: 2; /*flex: 1 伸缩盒模型宽度自动变成百分百，当前的伸缩个体分配权重高于其他个体*/
}


.videoContainer .header .placeholder{
  font-size: 26rpx;
  color:#d43c33;
  text-align: center;

}

.videoContainer .header  input {
  width: 100%;
  height: 100%;
}


/* 导航区域 */
.videoNav {
  display: flex;
  white-space: nowrap;/*flexItem为纯文字的时候需要添加该属性*/
  height: 62rpx;
  padding: 10rpx 0;
}

.videoNav .scrollItem {
  padding: 0 30rpx;
}

.videoNav .navContent {
  height: 60rpx;
  font-size: 30rpx;
  line-height: 60rpx;
}

.videoNav .navContent.active {
  border-bottom: 1rpx solid #d43c33;
}
