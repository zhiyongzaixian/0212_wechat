<view class="videoContainer">
  <!-- 头部区域 -->
  <view class="header">
    <image src="/static/images/video/video.jpg"></image>
    <view class="search">
      <input type="text" placeholder="光辉岁月" placeholder-class="placeholder"/>
    </view>
    <image src="/static/images/logo.png"></image>
  </view>

  <!-- 导航区域 -->
  <scroll-view class="videoNav" enable-flex scroll-x>
    <view bindtap="changeNavId" id="{{item.id}}" class="scrollItem" wx:for="{{videoGroupList}}" wx:key="id">
      <view class="navContent {{navId === item.id?'active': 'xxx'}}" >
        {{item.name}}
      </view>
    </view>
  </scroll-view>

  <!-- 视频列表 -->
  <scroll-view  class="videoList">
    <view class="videoItem" wx:for="{{videoList}}" wx:key="id">
      <video src="{{item.data.urlInfo.url}}"></video>
    </view>
  </scroll-view>
</view>
