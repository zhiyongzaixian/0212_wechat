.songDetailContainer {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: rgba(0, 0, 0, 0.5);
  height: 100%;
}
/* 底座 */
.circle {
  position: relative;
  z-index: 100;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #fff;
  margin: 10rpx 0;
}

/* 摇杆 */
.needle {
  position: relative;
  z-index: 99;
  left: 60rpx;
  top: -40rpx;
  width: 192rpx;
  height: 274rpx;
}

.discContainer{
  width: 598rpx;
  height: 598rpx;
}


.discContainer .disc {
  position: relative;
  z-index: 1;
  top: -170rpx;
  width: 100%;
  height: 100%;

}
